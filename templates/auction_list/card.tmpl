{{ define "auction_list/card.tmpl" }}

<div class="col s12 m6 l4">
  <div class="card">
    <div class="card-image">
      <img src="{{ .Image }}">
      <span class="card-title">{{ .Title }}</span>
    </div>
    <div class="card-content">
      <p>{{ .Description }}</p>
    </div>
    <div class="card-action">
      <a href="{{ .AuctionID }}">Open</a>
    </div>
  </div>
</div>

{{ end }}
