{{ define "auction/details.tmpl" }}
<div class="">
  <div class="row">
    <div class="col s12">
      <h4>{{ .auction.Title }}</h4>
    </div>
  </div>
  <div class="row">
    <div class="col s4 m3">
      {{ range .auction.Image }}
        <img src="data:image/png;base64, {{ . }}" alt="" width="100%">
      {{ end }}
    </div>
    <div class="col s8 m9">
      <p class="flow-text">
        {{ .auction.Description }}
      </p><br/><br/>
      <blockquote>
        <h5 class="text-darken-4">Created By: {{ .auction.CreatedBy }}</h5>
      </blockquote>
      <blockquote>
        <h5 class="text-darken-4">Base Price: {{ .auction.BasePrice }}</h5>
      </blockquote>
    </div>
  </div>
  <div class="row">
    <div class="col s12 right-align">
      <p id="end-timer"></p>
    </div>
  </div>
</div>
{{ end }}
